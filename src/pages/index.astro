---
import { SignIn, SignOut } from 'auth-astro/components';
import { getSession } from 'auth-astro/server';
import GoogleLogo from '../Icons/GoogleLogo.astro';
import GithubLogo from '../Icons/GithubLogo.astro';

const session = await getSession(Astro.request);
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Responsive Tailwind</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>

<section class="container mx-auto p-4">
  <div class="flex flex-wrap justify-center gap-4">
    <article class="flex flex-col rounded items-center justify-center bg-gray-200/65 w-32 h-32 hover:shadow-xl transition-shadow duration-300 p-2">
      <SignIn provider="google">
        <div class="flex items-center m-auto justify-center w-9 h-9">
          <GoogleLogo class="w-full h-full" />
        </div>
        <p class="mt-2 text-center">Sign in with Google</p>
      </SignIn>
    </article>
    <article class="flex flex-col rounded items-center justify-center bg-gray-200/65 w-32 h-32 hover:shadow-xl transition-shadow duration-300 p-2">
      <SignIn provider="github">
        <div class="flex items-center m-auto justify-center w-16 h-16">
          <GithubLogo class="w-full h-full" />
        </div>
        <p class="mt-2 text-center">Sign in with Github</p>
      </SignIn>
    </article>
    <article class="flex flex-col rounded items-center justify-center bg-gray-200/65 w-32 h-32 hover:shadow-xl transition-shadow duration-300 p-2">
      <SignIn provider="linkedin">
        <div class="flex items-center m-auto justify-center w-16 h-16">
          <GithubLogo class="w-full h-full" />
        </div>
        <p class="mt-2 text-center">Sign in with LinkedIn</p>
      </SignIn>
    </article>
  </div>
</section>

</body>
